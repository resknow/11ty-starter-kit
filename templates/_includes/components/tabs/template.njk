{% set id = id | default('tab') %}

<div x-data="{ activeTab: 1 }" class="tabs">
    <nav class="tabs__nav">
        <ul class="cluster">
            {% for heading in headings %}
            <li>
                <a @click.prevent="activeTab = {{ loop.index }}" href="#{{ id }}-{{ loop.index }}">{{ heading }}</a>
            </li>
            {% endfor %}
        </ul>
    </nav>
    {{ content | safe }}
</div>